<%= render "layouts/navigation" %>

<div class="bg-secondary-subtle">
  <div class="container justify-content-center">
    <h1 class="text-center">Listing All Articles</h1>
    <!--  <div><%#=link_to "New Article", "/articles/new" %></div>-->

    <% @article.each do |var| %>
      <div class="text-center row px-0 container justify-content-center">
        <div class="card text-center my-2 col-8 ">
          <div class="card-header fst-italic">
            By <%= var.user.username %>
          </div>
          <div class="card-body">
            <h5 class="card-title text-success"><%= var.title %></h5>
            <p class="card-text"><%= var.description %></p>
            <!--        <a href="#" class="btn btn-primary">Go somewhere</a>-->
            <%= link_to 'View', "articles/#{var.id}", class: "btn btn-outline-success" %>
            <%= link_to 'Edit', "articles/#{var.id}/edit", class: "btn btn-outline-info" %>
            <%= link_to "Delete", "articles/#{var.id}/delete", class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure, you want to delete ?" } %>

          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(var.created_at) %> |
              Edited <%= time_ago_in_words(var.updated_at) %></small>
          </div>
        </div>
    <% end %>
    </div>
  </div>
</div>
